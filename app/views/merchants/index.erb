<% @title="All Merchants" %>
<header class='header'>
  <h1 id='header_title'>Merchants</h1></br>
  <a class="link_to_show" href="/merchants-dashboard">Merchants Dashboard</a></br>
  <a class='create_button' href="/merchants/new"> Create a New Merchant </a>
</header>
  <section class ="background">
    <section class="merchants_list">
    <% @merchants.each do |merchant| %>
      <section class='display'>
        <a class="link_to_show" href="merchants/<%= merchant.id %>"><%= merchant.name %></a>
        <div class="buttons">
          <div class="edit_button">
          <form action="/merchants/<%= merchant.id %>/edit" method="GET">
            <input type="submit" value="edit"/>
          </form>
        </div>
          <form action="/merchants/<%= merchant.id %>" method="POST">
            <input type="hidden" name="_method" value="DELETE">
            <input type="submit" value="delete"/>
          </form>
        </div>
      </section>
    <% end %>
  </section>
</section>
