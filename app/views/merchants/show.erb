<% @title="Merchant: #{@merchant.id}" %>
<header class='header'>
  <h1 id='header_title'><%= @merchant.name %></h1>
  <div class="buttons">
    <div>
  <form action="/merchants/<%= @merchant.id %>/edit" method="GET">
    <input type="submit" value="edit"/>
  </form>
</div>
  <form action="/merchants/<%= @merchant.id %>" method="POST">
    <input type="hidden" name="_method" value="DELETE">
    <input type="submit" value="delete"/>
  </form>
</div>
</header>

<section class="all_cards">
  <% @merchant.items.each do |item| %>
  <section class="card">
    <img src="<%= item.image %>"><br>
    <a class="link_to_show" href="../items/<%= item.id %>"><%= item.title %></a></br>
    <%= item.format_price %></br></br>
    <form action="/items/<%= item.id %>" method="POST">
      <input type="hidden" name="_method" value="DELETE">
      <input type="submit" value="delete"/>
    </form>
  </section>
  <% end %>
</section>
